
{
  "name": "RAM",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "system.memory"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}